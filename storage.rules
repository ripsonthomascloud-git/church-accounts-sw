rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Parish Directory images - authenticated users can read and write
    match /parish-directory/{allPaths=**} {
      allow read: if true; // Public read access for displaying images
      allow write: if isAuthenticated(); // Only authenticated users can upload
    }

    // Default rule - deny access to other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
